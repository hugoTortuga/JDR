<UserControl x:Class="JDR.Vue.Views.UCMapEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JDR.Vue.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Panel.ZIndex="1">
            <Button Content="Changer le fond" Height="30" Width="150" Margin="5" HorizontalAlignment="Left">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:CallMethodAction TargetObject="{Binding}" MethodName="ChangeBackground"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>
        <Canvas x:Name="MyCanvas" MouseLeftButtonDown="MyCanvas_MouseLeftButtonDown">
            <Canvas.Background>
                <ImageBrush ImageSource="{Binding BackgroundPath,UpdateSourceTrigger=PropertyChanged}" Stretch="UniformToFill" />
            </Canvas.Background>
            <Polygon x:Name="MyPolygon" Stroke="Black" StrokeThickness="1" Fill="Transparent"/>
        </Canvas>
    </Grid>
</UserControl>
