<UserControl x:Class="JDR.Vue.Views.UCMapEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JDR.Vue.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Click="BackToMenu" Content="Retour au menu" Height="35" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Panel.ZIndex="2"/>
        <Canvas x:Name="MyCanvas" Background="White" MouseLeftButtonDown="MyCanvas_MouseLeftButtonDown">
            <Polygon x:Name="MyPolygon" Stroke="Black" StrokeThickness="1" Fill="Transparent"/>
        </Canvas>
    </Grid>
</UserControl>
