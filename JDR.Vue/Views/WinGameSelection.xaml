<Window x:Class="JDR.Vue.Views.WinGameSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JDR.Vue.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="Sélectionner une partie" Height="300" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" ItemsSource="{Binding Games, UpdateSourceTrigger=PropertyChanged}" Margin="4 4 4 0"
                 SelectedItem="{Binding SelectedGame, UpdateSourceTrigger=PropertyChanged}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:CallMethodAction TargetObject="{Binding}" MethodName="GameSelected" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ListBox>
        <Button Content="Annuler" Click="CancelClicked" Grid.Row="1" Margin="4"/>
    </Grid>
</Window>
