<UserControl x:Class="JDR.Vue.Views.UCGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JDR.Vue.Views" Focusable="True" 
             mc:Ignorable="d" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Content="Ouvrir fiche perso" Click="OpenCharacterSheet"  Width="150" Height="35" HorizontalAlignment="Left" />
        </StackPanel>

        <Viewbox Grid.Row="1">
            <Canvas Name="GameCanvas" Height="1080" Width="1800" MouseRightButtonDown="GameCanvas_MouseRightButtonDown" MouseLeftButtonDown="GameCanvas_MouseLeftButtonDown">
                <Canvas.Background>
                    <ImageBrush ImageSource="/Assets/background.jpeg" Stretch="Uniform"/>
                </Canvas.Background>
                <Image Source="/Assets/mob-lizard.png" Canvas.Left="870" Canvas.Top="335" Name="Player1" Height="50" Width="50" MouseLeftButtonDown="PlayerClicked" />
                <Image Source="/Assets/rock.png" Canvas.Left="880" Canvas.Top="249" Name="Obstacle1" Height="40" Width="40"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
