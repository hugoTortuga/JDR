<UserControl x:Class="JDR.Vue.Views.UCGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JDR.Vue.Views" Focusable="True" 
             mc:Ignorable="d" Background="Black"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Changer de map" Click="ChangeMap" Width="150" Height="35" HorizontalAlignment="Left" Margin="5 0" />
            <Slider x:Name="ResizeSlider" Grid.Row="1" Margin="10" Minimum="100" Maximum="2000" Value="1000" Width="300" Height="35"  ValueChanged="ResizeSlider_ValueChanged" />
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="&#x2190;" FontSize="18" Width="25" Height="25" Click="LeftButton_Click" />
                <StackPanel Orientation="Vertical">
                    <Button Content="&#x2191;" FontSize="18" Width="25" Height="25" Click="UpButton_Click" />
                    <Button Content="&#x2193;" FontSize="18" Width="25" Height="25" Click="DownButton_Click" />
                </StackPanel>
                <Button Content="&#x2192;" FontSize="18" Width="25" Height="25" Click="RightButton_Click" />
            </StackPanel>
        </StackPanel>

        <Viewbox Grid.Row="1">
            <Canvas Name="GameCanvas" Height="1080" Width="1800" MouseRightButtonDown="GameCanvas_MouseRightButtonDown">
                <Canvas.Background>
                    <ImageBrush x:Name="BackgroundImageBrush" ImageSource="/Assets/background.jpeg" Stretch="Uniform" />
                </Canvas.Background>
                <Image Source="/Assets/mob-lizard.png" Canvas.Left="870" Canvas.Top="335" Name="Player1" Height="50" Width="50" MouseLeftButtonDown="PlayerClicked" MouseMove="ImageMouseMove" >
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ouvrir la fiche du personnage" Click="OpenCharacterSheet"/>
                            <MenuItem Header="Changer le token" Click="ChangeToken"/>
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
