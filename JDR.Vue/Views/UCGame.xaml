<UserControl x:Class="JDR.Vue.Views.UCGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" KeyUp="UserControl_KeyUp"
             xmlns:local="clr-namespace:JDR.Vue.Views" Focusable="True" Loaded="UserControl_Loaded" KeyDown="UserControl_KeyDown"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox>
            <Canvas Name="GameCanvas" Height="1080" Width="1800">
                <Canvas.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Assets/background.jpeg" Stretch="Uniform"/>
                </Canvas.Background>
                <Image Source="pack://application:,,,/Assets/mob-lizard.png" Canvas.Left="283" Canvas.Top="192" Name="Player1" Height="50" Width="50"/>
                <Image Source="pack://application:,,,/Assets/rock.png" Canvas.Left="400" Canvas.Top="168" Name="Obstacle1" Height="40" Width="40"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
