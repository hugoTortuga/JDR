<UserControl x:Class="JDR.Vue.Views.UCConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JDR.Vue.Views" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="220" Width="220" Height="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Connexion" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <TextBox Grid.Row="1" Margin="0 0 0 10"/>
        <PasswordBox Grid.Row="2" Margin="0 0 0 10"/>
        <Button Grid.Row="3" Margin="0 0 0 10" Content="Connexion" Click="Connect"/>
        <Button Grid.Row="4" VerticalAlignment="Top" Background="Transparent" BorderThickness="0"  Content="Pas de compte ? Inscrivez-vous" Click="GoToSubscribtion"/>
    </Grid>
</UserControl>
